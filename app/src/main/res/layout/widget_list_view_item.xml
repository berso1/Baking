<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view">

    <TextView
        android:id="@+id/widget_recipe"
        android:layout_width="@dimen/widget_width"
        android:layout_height="wrap_content"
        android:text="@string/add_widget"
        android:textColor="@android:color/black"
        android:textSize="@dimen/widget_text_size"
        android:layout_gravity="start"
        android:background="@color/widget_bg_color"
        android:paddingLeft="@dimen/list_view_padding"
        android:paddingRight="@dimen/list_view_padding"/>
</LinearLayout>